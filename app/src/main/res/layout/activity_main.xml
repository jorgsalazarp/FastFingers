<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF000000"> <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <cl.duoc.fastfingers.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/btnGameSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/spr_opciones"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:background="#33000000"
        android:contentDescription="Pausar y Configurar" />

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Puntaje: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"/>

    <FrameLayout
        android:id="@+id/gameOverOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvGameOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_over"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FF5252"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvFinalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntaje final: 0"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresa tu nombre"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:background="#33FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:inputType="textPersonName"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnSaveScore"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="GUARDAR PUNTAJE"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnGoToRanking"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="VER RANKING"
                android:backgroundTint="#2196F3"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnRestart"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/restart_game"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnExitGame"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/exit_app" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222">

        <EditText
            android:id="@+id/input"
            android:hint="@string/hint_input"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:maxLines="1"/>
    </LinearLayout>

</LinearLayout>